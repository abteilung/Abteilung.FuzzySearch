prototype(Abteilung.FuzzySearch:IncludeCase) < prototype(Neos.Fusion:Component) {
    alwaysInclude = ${Configuration.setting('Abteilung.FuzzySearch.alwaysInclude')}
    selectorCollection = ${Configuration.setting('Abteilung.FuzzySearch.selector.collection')}
    selectorContent = ${Configuration.setting('Abteilung.FuzzySearch.selector.content')}
    selectorOnDocument = ${Configuration.setting('Abteilung.FuzzySearch.selector.onDocument')}

    includeInBackend = false
    node = ${documentNode}

    renderer = Neos.Fusion:Case {
        alwaysInclude {
            condition = ${props.alwaysInclude}
            renderer = true
        }
        inBackend {
            condition = ${node.context.inBackend}
            renderer = ${props.includeInBackend}
        }
        onDocument {
            condition = ${props.selectorOnDocument && q(props.node).is(props.selectorOnDocument)}
            renderer = true
        }
        inContent {
            condition = ${props.selectorContent && q(props.node).children(props.selectorCollection).find(props.selectorContent).is()}
            renderer = true
        }
        default {
            condition = true
            renderer = false
        }
    }
}
